{
  "name": "home-iot",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon app.js",
    "build": "parcel build ./src/index.html",
    "stop": "pm2 stop app",
    "start": "NODE_ENV=production pm2 start app.js",
    "deploy": "git pull && yarn && yarn stop && yarn start"
  },
  "nodemonConfig": {
    "ignore": [
      ".cache/*",
      "dist/*",
      "node_modules/*",
      "yarn.log",
      "*.sqlite",
      "src/components/*"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.4.1",
    "@material-ui/icons": "^4.4.1",
    "@material-ui/styles": "^4.4.1",
    "date-fns": "^2.2.1",
    "express": "^4.17.1",
    "pm2": "^3.5.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "recharts": "^1.7.1",
    "sqlite": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^1.19.2",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-static-files-copy": "^2.2.1"
  }
}
